<div class="jumbotron">
	<h1>Welcome to my Pinteresting!</h1>

	<% if user_signed_in? %>
		<!-- show progress (right now this is fake progress) -->
		<p>This is a test app that we're writing to get started on Ruby on Rails</p>
		<p>We're about 30% Complete right now</p>
		<div class="progress">
	  	<div class="progress-bar" role="progressbar" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100" style="width: 30%;">
	    	<span class="sr-only">30% Complete</span>
	  	</div>
		</div>
		<p>Click here to <%= link_to "Receive Updates", updates_path, class: "btn btn-primary btn-lg" %> about our progress.</p>
	<% else %>
		<!-- let user sign up or sign in -->
		<p>
			<%= link_to "Log In", new_user_session_path, class: "btn btn-default btn-lg" %>
			<%= link_to "Sign Up", new_user_registration_path, class: "btn btn-primary btn-lg" %>
		</p>
	<% end %>

</div>